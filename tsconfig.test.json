{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2015",
        "jsx": "react",
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "filesGlob": [
        "typings/**/*.d.ts",
        "test/**/*.ts",
        "test/**/*.tsx"
    ],
    "exclude": [
        "src",
        "typings/browser.d.ts",
        "typings/browser",
        "node_modules"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
